<div class="assets-wrapper">

{{#if assets}}

    {{#each assets}}

    <div class="type-{{attributes.overview_platform}} col-xs-6 col-md-3 col-lg-1-5 app-assets-wrapper">
        {{#if indashboard}}
            <div class="ribbon-wrapper-green"><div class="ribbon-green">安装</div></div>
        {{/if}}
        <div class="app-assets">
            <a href="{{tenantedUrl "/assets"}}/{{type}}/{{id}}">
            <img class="app-assets-icon"
                 src="{{#if attributes.images_thumbnail}}{{url "/api/mobileapp/getfile/"}}{{attributes
                 .images_thumbnail}}{{/if}}">
            </a>
            <div class="app-assets-info">
                <div class="app-assets-name">
                    {{attributes.overview_displayName}}
                </div>
                <div class="app-assets-provider">
                    {{attributes.overview_provider}}
                </div>
            </div>

            <div class="app-assets-icon-info">
                <i title="{{attributes.overview_platform}}" class="fw {{iconImage attributes.overview_platform}} fw-1_5x fw-inverse"></i>
                <i title="{{attributes.overview_type}}" class="fw {{iconImageType attributes.overview_type}} fw-1_5x fw-inverse"></i>
            </div>

            <span class="app-assets-rating"> {{#assetRating rating}}{{/assetRating}} </span>
        </div>
    </div>
        

    {{/each}}

    {{else}}

    <div class="well-large col-md-12 no-apps-box">
        <i class="fw fw-paste nothing-icon"></i> 对不起，我们找不到你要的任何应用程序
    </div>

{{/if}}

</div>

{{#if assets}}
    <div class="row">
        <ul class="pager">
        {{#if leftNav}}
            <li><a href="{{tenantedUrl "/assets/webapp?page="}}{{this.leftNav}}">前一页</a></li>
        {{/if}}
        {{#if rightNav}}
            <li><a  href="{{tenantedUrl "/assets/webapp?page="}}{{this.rightNav}}">下一页</a></li>
         </ul>
        {{/if}}
    </div>
{{/if}}